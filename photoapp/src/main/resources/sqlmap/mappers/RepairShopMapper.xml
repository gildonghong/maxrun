	}
</select>

<select id="getPhotoList" parameterType="java.util.HashMap" statementType="CALLABLE"  resultType="CamelCaseHashMap">
	{
		<!-- PROCEDURE sp_getPhotoListForMgrProgram	@reqNo	bigint,
											@departmentNo	int=null,
											@departmentName	nvarchar(50)=null -->
		call sp_getPhotoListForMgrProgram (#{reqNo}, #{departmentNo}, #{departmentName})
	}
</select>
</mapper>